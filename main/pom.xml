<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.alvarolongueira.user.service</groupId>
        <artifactId>user-service-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>user-service-main</artifactId>
    <name>User Service - Main</name>

    <dependencies>
        <dependency>
            <groupId>com.alvarolongueira.user.service</groupId>
            <artifactId>user-service-domain</artifactId>
        </dependency>
        <dependency>
            <groupId>com.alvarolongueira.user.service</groupId>
            <artifactId>user-service-application</artifactId>
        </dependency>
        <dependency>
            <groupId>com.alvarolongueira.user.service</groupId>
            <artifactId>user-service-infrastructure-rest-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.alvarolongueira.user.service</groupId>
            <artifactId>user-service-infrastructure-database</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>main</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.alvarolongueira.user.service.UserServiceApplication</mainClass>
                    <layers>
                        <enabled>true</enabled>
                    </layers>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
